{
    "name": "argo-php/docblock-parser",
    "description": "PHP DocBlock parser",
    "type": "package",
    "authors": [
        {
            "name": "Babushkin Pavel",
            "email": "idarksoft@gmail.com"
        }
    ],
    "require": {
        "php": "8.3.*|8.4.*|8.5.*",
        "ext-tokenizer": "*",
        "argo-php/types": "^1.0",
        "phpstan/phpdoc-parser": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.25",
        "vimeo/psalm": "^6.13"
    },
    "autoload": {
        "psr-4": {
            "Argo\\DocBlockParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArgoTest\\DocBlockParser\\": "tests/"
        }
    },
    "scripts": {
        "pint": "vendor/bin/pint",
        "psalm": "vendor/bin/psalm --output-format=phpstorm --no-cache"
    }
}
